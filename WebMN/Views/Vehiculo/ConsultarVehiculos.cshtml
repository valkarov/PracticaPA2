@model IEnumerable<WebMN.Models.VehiculoModel>

@{
    ViewBag.Title = "Consulta de Vehículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Información de Vehículos</h4>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VendedorId</td>
                            <td>@item.Marca</td>
                            <td>@item.Modelo</td>
                            <td>@item.Precio</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
